.popup-luckdraw-box {
    width: 590rpx;
    min-height: 380rpx;
    background: rgba(255,255,255,1);
    border-radius: 12rpx;
    overflow: hidden;
    text-align: center;
    display: flex;
    flex-direction: column;
}

.popup-luckdraw-box .pop-title {
    height: 50rpx;
    font-size: 36rpx;
    padding: 70rpx 0 10px;
    font-family: PingFangSC-Medium;
    font-weight: bolder;
    color: rgba(0,0,0,0.8);
    line-height: 50rpx;
}

.popup-luckdraw-box .pop-content {
    font-size: 26rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(102,102,102,1);
    line-height: 36rpx;
    width: 416rpx;
    margin: 0 auto;
    padding: 0rpx 0 20rpx;
    flex: 1;
}

.popup-luckdraw-box .pop-btn {
    display: flex;
    justify-content: space-between;
    height: 98rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(102,102,102,1);
    background: rgba(245,245,245,1);
}

.pop-btn text {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.pop-btn text.btn-sure {
    background:linear-gradient(90deg,rgba(248,145,148,1),rgba(250,135,139,1));
    color: #ffffff;
}