.setMeal-box {
    background: #fff;
    width: 668rpx;
    height: 70%;
    border-radius: 15rpx;
    position: relative;
    padding-bottom: 84rpx;
}

.setMeal-title {
    height: 84rpx;
    background: #f1f1f1;
    font-size: 32rpx;
    line-height: 84rpx;
    text-align: center;
    border-top-left-radius: 15rpx;
    border-top-right-radius: 15rpx;
}

.setMeal-content-box {
    height: calc(100% - 168rpx);
}

.setMeal-content-box .section:last-of-type {
    padding-bottom: 12rpx;
}

.setMeal-content-box .section-title {
    color: 4b4b4b;
    font-size: 24rpx;
    line-height: 36rpx;
    padding-top: 12rpx;
    padding-left: 28rpx;
}

.setMeal-content-box .goods-list {
    display: flex;
    flex-wrap: wrap;
    width: 636rpx;
    margin: 0 auto;
}

.setMeal-content-box .goods-item {
    width: 188rpx;
    height: 230rpx;
    border: 2rpx solid #cbcbcb;
    box-sizing: border-box;
    border-radius: 8rpx;
    padding: 25rpx 0 0 0;
    margin: 14rpx 12rpx;
}

.setMeal-content-box .goods-item.active {
    border: 2rpx solid #3CDBC0;
}

.setMeal-content-box .goods-img {
    width: 125rpx;
    height: 125rpx;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    margin: 0 auto;
}

.setMeal-content-box .goods-img image {
    width: 125rpx;
    height: 125rpx;
}

.setMeal-content-box .goods-img .no-balance {
    position: absolute;
    top: 0;
    left: 0;
}

.setMeal-content-box .goods-info {
    padding-top: 4rpx;
}

.setMeal-content-box .goods-info .goods-name,.setMeal-content-box .goods-info .goods-price {
    font-size: 24rpx;
    line-height: 36rpx;
    color: #050806;
    display: block;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.setMeal-content-box .goods-info .goods-price text {
    color: #f82111;
}

.setMeal-bottom-botton {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 84rpx;
}

.setMeal-bottom-botton button {
    width: 100%;
    border: 0;
    padding: 0;
    margin: 0;
    background: #3CDBC0;
    color: #fff;
    font-size: 30rpx;
    height: 84rpx;
    line-height: 84rpx;
    border-radius: 0 0 15rpx 15rpx;
}