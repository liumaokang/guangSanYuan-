<form bindsubmit="bindMobile" reportSubmit="true">
    <view catchtap="bindbox" class="mobile-input-box">
        <image src="https://app-1256684088.cos.ap-beijing.myqcloud.com/wujieImages/iconMobile.png"></image>
        <input autoFocus bindinput="bindMobileInput" maxlength="11" placeholder="请输入手机号" type="number"></input>
        <view catchtap="getCaptcha" class="get-code btn" style="background: {{getCodeBgColor}}">{{getCodeBtn}}</view>
    </view>
    <view class="code-input-box">
        <image src="https://app-1256684088.cos.ap-beijing.myqcloud.com/wujieImages/iconPassword.png"></image>
        <input bindinput="bindcaptchaInput" maxlength="6" placeholder="请输入验证码" type="password"></input>
    </view>
    <button class="confirm-btn btn" formType="submit">确认绑定</button>
</form>
