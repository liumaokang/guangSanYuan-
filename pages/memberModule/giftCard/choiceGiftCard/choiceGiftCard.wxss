page {
    background: #f3f4f6;
    padding-top: 7rpx;
    padding-bottom: 120rpx;
}

.card-item {
    width: 678rpx;
    margin: 7rpx auto;
    padding: 40rpx 14rpx;
    overflow: hidden;
    border-bottom: 1rpx solid #ebeff7;
    background: #fff;
    border-radius: 10rpx;
}

.card-item image {
    width: 220rpx;
    height: 140rpx;
    float: left;
}

.card-info {
    float: right;
    width: 430rpx;
    font-size: 24rpx;
    position: relative;
}

.card-info .name-box {
    margin-bottom: 20rpx;
    overflow: hidden;
}

.card-info .name-box text {
    float: right;
}

.card-info .name-box .card-name {
    font-size: 30rpx;
    float: left;
}

.card-info .name-box .card-no {
    font-size: 26rpx;
    float: left;
}

.card-info .price-box {
    margin-bottom: 10rpx;
    color: #333;
}

.card-info .price-box text {
    color: #f1b400;
}

.card-info .buy-time {
    color: #666;
}

.unavailable .card-info .buy-time {
    color: #ff6664;
}

.card-info .checked-icon {
    position: absolute;
    right: 42rpx;
    width: 38rpx;
    height: 38rpx;
    top: 50%;
    margin-top: -19rpx;
}

.no-data image {
    width: 300rpx;
    height: 320rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translateX(-45%) translateY(-60%);
}

.card-title {
    font-size: 24rpx;
    color: #1b1b1d;
    padding-top: 22rpx;
    line-height: 62rpx;
    height: 62rpx;
    border-bottom: 1rpx solid #dcdcdc;
    margin-bottom: 24rpx;
    margin-right: 19rpx;
    margin-left: 19rpx;
}

.card-title text {
    font-size: 20rpx;
    color: #666;
}