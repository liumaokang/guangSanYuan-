@import "../../template/barcode.wxss";

page {
    background: #F4F5F9;
    text-align: center;
}

.content {
    width: 688rpx;
    height: 790rpx;
    background: #fff;
    border-radius: 10rpx;
    overflow: hidden;
    margin: 0 auto;
    text-align: center;
    margin-top: 100rpx;
    position: relative;
}

.qrcode-box {
    text-align: center;
    width: 100%;
    height: 360rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 40rpx;
}

.qrcode-box canvas {
    width: 450rpx;
    height: 450rpx;
}

.content .number {
    font-size: 40rpx;
    margin-top: 50rpx;
}

.tig {
    font-size: 30rpx;
    color: #999;
}