.search-box-addr {
    height: 116rpx;
    width: 100%;
    background: #FFFFFF;
    box-sizing: border-box;
    padding: 0 40rpx;
    margin-bottom: 20rpx;
    overflow: hidden;
}

.search-main-addr {
    width: 100%;
    height: 116rpx;
    line-height: 116rpx;
    float: right;
    overflow: hidden;
    position: relative;
    color: #8B8B8C;
    background: #fff;
}

.search-main-addr input {
    font-size: 36rpx;
    height: 100%;
}

.search-main-addr label {
    position: absolute;
    top: 0rpx;
    left: 0rpx;
    width: 100%;
    height: 100%;
    font-size: 36rpx;
    line-height: 116rpx;
}

.search-main-addr label image {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
    margin-top: -4rpx;
}