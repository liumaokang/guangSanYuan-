page {
    border-top: 1rpx solid #f1f1f1;
    background-color: #F5F5F5;
}

.content {
    box-sizing: border-box;
}

.section {
    height: 120rpx;
    line-height: 120rpx;
    border-bottom: 1rpx solid #F5F5F5;
    text-align: left;
    background-color: #ffffff;
    font-size: 32rpx;
    color: #1b1b1d;
    padding: 0 40rpx;
}

.section:last-of-type {
    border: none;
}

.section image.right-icon {
    float: right;
    width: 16rpx;
    height: 32rpx;
    margin-top: 46rpx;
}

.section .label {
    color: rgba(0,0,0,0.6);
}

.section2 {
    margin-top: 20rpx;
}

.line {
    font-size: 28rpx;
    line-height: 120rpx;
    color: rgba(0,0,0,0.3);
    float: right;
}

.location {
    float: right;
    margin-right: 24rpx;
    color: #454545;
    font-size: 26rpx;
}

.copy-btn {
    float: right;
    border: 2rpx solid #454545;
    font-size: 26rpx;
    color: #454545;
    line-height: 40rpx;
    height: 40rpx;
    padding: 8rpx 26rpx;
    border-radius: 12rpx;
    margin-top: 36rpx;
}

.clear-torage view {
    width: 670rpx;
    height: 90rpx;
    font-size: 36rpx;
    color: rgba(102,102,102,1);
    font-weight: bold;
    line-height: 90rpx;
    border: 2rpx solid rgba(102,102,102,1);
    border-radius: 16rpx;
    display: block;
    text-align: center;
    position: absolute;
    bottom: 40rpx;
    left: 40rpx;
}