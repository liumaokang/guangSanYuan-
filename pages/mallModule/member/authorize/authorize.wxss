.top-info {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 120rpx;
    margin-bottom: 115rpx;
}

.top-info text {
    margin-top: 20rpx;
    height: 40rpx;
    font-size: 28rpx;
    color: #333;
    line-height: 40rpx;
}

.logo {
    width: 340rpx;
    height: 90rpx;
}

.auth-tips {
    display: block;
    font-size: 30rpx;
    color: #737373;
    line-height: 50rpx;
    margin-bottom: 28rpx;
    width: 100%;
    text-align: center;
}

.register text {
    color: #ffffff;
}

.btn-bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    box-sizing: border-box;
    padding: 100rpx 70rpx;
}

.btn.default {
    margin-top: 36rpx;
    background-color: #ffffff;
    border: 1rpx solid #3CDBC0;
    color: #3CDBC0;
}

.btn {
    height: 90rpx;
    background: #3cdbc0;
    border-radius: 4rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.btn image {
    width: 44rpx;
    height: 44rpx;
    margin-right: 52rpx;
}

.btn text {
    font-size: 28rpx;
    line-height: 90rpx;
}

button.auth {
    height: 90rpx;
    background: #3cdbc0;
    border-radius: 4rpx;
    line-height: 90rpx;
    color: #fff;
    font-size: 28rpx;
    font-weight: 400;
}