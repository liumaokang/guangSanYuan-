.top-info {
    width: 100%;
    height: 389rpx;
    display: flex;
    color: #fff;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    background: url('https://app-1256684088.cos.ap-beijing.myqcloud.com/wujieImages/iconRedPacketBg.png') no-repeat;
    background-size: 100% 100%;
    position: relative;
}

.top-info text {
    display: block;
    font-size: 31rpx;
    line-height: 39rpx;
}

.top-info .balance {
    font-size: 76rpx;
    line-height: 120rpx;
    margin-top: 86rpx;
}

.top-info .use {
    position: absolute;
    top: 20rpx;
    right: 31rpx;
    font-size: 34rpx;
}

.content {
    padding: 0 31rpx;
}

.content .title {
    font-size: 32rpx;
    height: 76rpx;
    line-height: 76rpx;
    border-bottom: 1rpx solid #ccc;
}

.content-item {
    height: 140rpx;
    border-bottom: 2rpx solid #ebebeb;
    display: flex;
    justify-content: space-between;
}

.status {
    height: 100%;
    display: flex;
    flex-direction: column;
    padding: 24rpx 0 27rpx 0;
}

.status>text:first-of-type {
    font-size: 30rpx;
    color: #333;
    line-height: 52rpx;
    margin-bottom: 4rpx;
}

.status>text:last-of-type {
    font-size: 24rpx;
    color: #999;
    line-height: 36rpx;
}

.num {
    height: 100%;
    font-size: 36rpx;
    font-weight: bold;
    line-height: 139rpx;
}

.recharge {
    color: #a3d489;
}

.consume {
    color: #f28584;
}

.no-data {
    width: 100%;
    height: 100%;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: #ffffff;
}

.no-data image {
    width: 242rpx;
    height: 261rpx;
    margin-top: 30%;
}

.loading {
    color: #999999;
    font-size: 28rpx;
    line-height: 80rpx;
    height: 80rpx;
    width: 100%;
    display: flex;
    justify-content: center;
    background: #eeeeee;
}

.popup-content {
    width: 670rpx;
    height: 861rpx;
    background: #fff;
    border-radius: 6rpx;
    position: relative;
    overflow: hidden;
}

.close-btn {
    width: 36rpx;
    height: 36rpx;
    position: absolute;
    top: 34rpx;
    right: 34rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.close-btn image {
    width: 22rpx;
    height: 22rpx;
}

.next-btn {
    background: #3CDBC0;
    height: 100rpx;
    font-size: 32rpx;
    color: #fff;
    font-weight: bold;
    line-height: 100rpx;
    text-align: center;
    position: absolute;
    bottom: 0;
    width: 100%;
}

.popup-content-title {
    font-size: 36rpx;
    line-height: 48rpx;
    height: 48rpx;
    padding-top: 25rpx;
    display: block;
    width: 100%;
    text-align: center;
}

.popup-content-box {
    padding: 53rpx 25rpx 0 25rpx;
}

.popup-content-header {
    font-size: 36rpx;
    line-height: 48rpx;
    color: #343434;
}

.popup-content-box .popup-content-tips {
    font-size: 32rpx;
    line-height: 36rpx;
    color: #666;
    margin-top: 14rpx;
}

.popup-content-box .popup-content-tips>text {
    color: #3CDBC0;
}

.popup-content-box .popup-content-img {
    margin-top: 20rpx;
    width: 100%;
    display: flex;
    justify-content: center;
}

.popup-content-box image {
    width: 428rpx;
}