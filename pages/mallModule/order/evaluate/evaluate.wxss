page {
    background: #F9F9F9;
    padding-bottom: 100rpx;
}

.evaluate-item {
    margin-bottom: 20rpx;
    background: #ffffff;
    padding: 0 40rpx;
}
.evaluate-item .title{
  font-size:26rpx;
  font-weight:bold;
  color:rgba(44,43,43,1);

}

.evaluate-goods {
    display: flex;
    padding: 22rpx 0 6rpx 0;
}

.goods-img-box {
    width: 105rpx;
    height: 105rpx;
    border:1rpx solid rgba(239,239,239,1);
    margin-right: 15rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.goods-img-box image {
    width: 100%;
    height: 100%;
}

.stars-box {
    height: 75rpx;
    line-height: 75rpx;
    display: flex;
    align-items: center;
}

.stars-box text {
    font-size: 26rpx;
    font-weight: lighter;
    color: #2C2B2B;
    margin-right: 40rpx;
}

.stars-box image {
    width: 37rpx;
    height: 35rpx;
    margin-right: 19rpx;
}

.evaluate-content {
    width: 100%;
    height: 257rpx;
    /* background: #f1f1f1; */
    /* position: relative; */
    /* margin-top: 13rpx; */
    padding-top: 20rpx;
}

.evaluate-content::before {
    content: '';
    position: absolute;
    width: 0;
    height: 0;
    border-width: 0 53rpx 26rpx;
    border-style: solid;
    border-color: transparent transparent #f1f1f1;
    left: 0;
    top: -13rpx;
}

.evaluate-content textarea {
    width: 100%;
    height: 257rpx;
    padding: 25rpx 22rpx 25rpx 22rpx;
    box-sizing: border-box;
    border:2rpx solid rgba(238,238,238,1);
    border-radius:10rpx;
    margin: 0 auto 0 auto;
    background:rgba(249,249,249,1);
    color: #505050;
    font-size: 28rpx;
    line-height: 36rpx;
}

.labels-box {
    padding: 0 35rpx 4rpx 35rpx;
}

.labels-item {
    height: 38rpx;
    padding: 0 28rpx;
    font-size: 24rpx;
    line-height: 38rpx;
    display: inline-block;
    color: #8B8B8C;
    border: 1rpx solid #DCDCDC;
    background: #ffffff;
    margin: 27rpx 15rpx 27rpx 0;
    border-radius: 4rpx;
}

.labels-box text.select {
    background: #F89093;
    border: 1rpx solid #F89093;
    color: #ffffff;
}

.evaluate-img-box {
    border-top: 1rpx solid rgba(238,238,238,1);
    margin-top: 30rpx;
    padding: 30rpx 0 41rpx 0;
    display: flex;
    flex-wrap: wrap;
}

.evaluate-img-box>image {
    width: 160rpx;
    height: 160rpx;
}

.evaluate-img {
    position: relative;
    width: 160rpx;
    height: 160rpx;
    border-radius: 6rpx;
    margin-right: 8rpx;
    margin-bottom: 9rpx;
}

.evaluate-img:nth-of-type(4n) {
    margin-right: 0;
}

.evaluate-img image:first-of-type {
    width: 100%;
    height: 100%;
}

.evaluate-img image.close-icon {
    height: 32rpx;
    width: 32rpx;
    position: absolute;
    right: -16rpx;
    top: -16rpx;
    z-index: 8;
}

.evaluate-img-box .submit-img {
    width: 173rpx;
    height: 173rpx;
    /* border: 1rpx dotted rgba(0,0,0,0.3); */
}

.button-box {
    height: 100rpx;
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    font-size: 30rpx;
    line-height: 100rpx;
    font-weight: bold;
    text-align: center;
    border-radius: 0;
    border: none;
}

button[class="button-box"]::after {
    border: none;
    border-radius: 0;
}

button[disabled]::after {
    border: none;
    border-radius: 0;
}

button.enable {
    background:linear-gradient(90deg,rgba(255,96,96,1),rgba(246,65,69,1));
    color: #ffffff;
}

button.unable {
    background: #f1f1f1!important;
    color: #8B8B8C!important;
}