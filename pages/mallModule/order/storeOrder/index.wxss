.order-body {
    padding: 0 30rpx;
    background-color: #f5f5f5;
    min-height: 100vh;
    overflow: hidden;
}

.order-body .order {
    background: rgba(255,255,255,1);
    border-radius: 10px;
    margin-top: 20rpx;
    padding: 30rpx 40rpx;
}

.order-body .order:active {
    opacity: 0.8;
}

.order-body .top {
    display: flex;
    margin-bottom: 30rpx;
    justify-content: space-between;
}

.order-body .top .left {
    display: flex;
    flex-direction: column;
}

.top .store {
    height: 44rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Medium;
    font-weight: bolder;
    color: rgba(0,0,0,1);
    line-height: 44rpx;
}

.top .time {
    height: 34rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(102,102,102,1);
    line-height: 34rpx;
}

.order .right {
    height: 34rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(153,153,153,1);
    line-height: 34rpx;
    padding-right: 22rpx;
    background: url('https://xianfengapp.oss-cn-hangzhou.aliyuncs.com/xianfengImages/sprite3/memberMore.png') right center no-repeat;
    background-size: 12rpx 20rpx;
}

.goods {
    padding: 30rpx;
    background: rgba(250,250,250,1);
    border-radius: 5px;
    border: 1px solid rgba(229,229,229,1);
    margin-bottom: 20rpx;
}

.goods .goods-item {
    height: 34rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(153,153,153,1);
    line-height: 34rpx;
    display: flex;
    justify-content: space-between;
    margin-bottom: 20rpx;
}

.bottom {
    height: 50rpx;
    font-size: 36rpx;
    font-family: PingFangSC-Medium;
    font-weight: bolder;
    color: rgba(51,51,51,1);
    line-height: 50rpx;
    text-align: right;
}

.bottom .plain {
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(102,102,102,1);
    line-height: 50rpx;
}

.no-data {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.no-data image {
    width: 280rpx;
    height: 240rpx;
}