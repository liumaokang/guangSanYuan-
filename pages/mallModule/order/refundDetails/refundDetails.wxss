page {
    background: #f1f1f1;
}

.refund-item {
    background: #fff;
    margin-bottom: 20rpx;
    padding: 0 40rpx 20rpx 40rpx;
}

.refund-title {
    height: 70rpx;
    font-size: 24rpx;
    line-height: 70rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 1rpx solid #f1f1f1;
}

.refunding {
    color: #FB5F68;
}

.refund-goods {
    padding: 10rpx 0;
    display: flex;
    flex-wrap: wrap;
    width: calc(100% + 30rpx);
}

.goods-box {
    width: 120rpx;
    height: 120rpx;
    border-radius: 6rpx;
    margin: 10rpx 20rpx 10rpx 0;
}

.goods-box image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 6rpx;
    background: #f1f1f1;
}

.refund-reason {
    padding: 2rpx 0 0 0;
}

.refund-reason text {
    font-size: 24rpx;
    color: #1E1E1E;
    display: block;
    line-height: 42rpx;
}

.refund-img-box {
    display: flex;
    flex-wrap: wrap;
    width: calc(100% + 30rpx);
}

.refund-img-box image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 6rpx;
    margin: 10rpx 20rpx 10rpx 0;
    background: #f1f1f1;
}