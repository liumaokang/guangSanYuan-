.top-info {
    width: 100%;
    height: 87rpx;
    position: fixed;
    z-index: 10;
    top: 0;
    left: 0;
    right: 0;
    overflow: hidden;
    color: #000;
    padding: 0 30rpx 0 30rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #fff;
    border-bottom: 1rpx solid #e5e5e5;
}

.location {
    height: 88rpx;
    line-height: 87rpx;
    float: left;
    font-size: 28rpx;
    display: flex;
    font-weight: bold;
    background: url('https://xianfengapp.oss-cn-hangzhou.aliyuncs.com/xianfengImages/sprite3/selectDown.png') no-repeat right center;
    background-size: 16rpx 16rpx;
    padding-right: 27rpx;
    align-items: center;
}

.location text:first-of-type {
    display: block;
    min-width: 100rpx;
    text-align: left;
    white-space: nowrap;
    font-size: 30rpx;
    line-height: 87rpx;
    color: #1b1b1d;
    margin-left: 10rpx;
    letter-spacing: 3rpx;
    position: relative;
    text-overflow: ellipsis;
}

.location .shop-img {
    width: 130rpx;
    height: 40rpx;
    margin-right: 43rpx;
}

.location text::after {
    content: '';
    position: absolute;
    left: -22rpx;
    top: 34rpx;
    height: 22rpx;
    width: 1rpx;
    background-color: #333;
}

.shop-cart {
    background: none;
}

.shop-cart text::after {
    display: none;
}

.index-search-box {
    height: 40rpx;
    display: flex;
    align-items: center;
}

.index-search-box image {
    width: 40rpx;
    height: 40rpx;
}

.index-search-box text {
    font-size: 28rpx;
    color: #333333;
    opacity: 0.4;
    line-height: 28rpx;
}