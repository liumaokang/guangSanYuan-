.bind-mobile-box {
    margin: 0rpx 40rpx;
    height: 110rpx;
    background: #fff;
    font-size: 24rpx;
    line-height: 110rpx;
    overflow: hidden;
    border-bottom: 1rpx solid #f1f1f1;
}

.bind-mobile-box image {
    width: 22rpx;
    height: 34rpx;
    vertical-align: middle;
    margin-top: -6rpx;
    margin-right: 10rpx;
}

.bind-mobile-box .bind-btn {
    width: 96rpx;
    height: 46rpx;
    line-height: 46rpx;
    margin: 0rpx;
    padding: 0rpx;
    margin-top: 32rpx;
    border: 2rpx solid #3CDBC0;
    color: #3CDBC0;
    text-align: center;
    float: right;
    font-size: 20rpx;
    border-radius: 4rpx;
    background-color: #fff;
    position: unset;
}