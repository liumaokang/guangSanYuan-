.search-box-addr {
    height: 70rpx;
    background: #fff;
    border-radius: 6px;
    padding: 20rpx 30rpx;
    overflow: hidden;
}

.search-main-addr {
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    float: right;
    overflow: hidden;
    border-radius: 4rpx;
    position: relative;
    color: #8b8b8c;
    border: 1px solid #e5e5e5;
    background: #f9f9f9;
}

.search-main-addr input {
    font-size: 36rpx;
    height: 100%;
    padding-left: 20rpx;
    width: 500rpx;
}

.search-main-addr label {
    position: absolute;
    top: 0rpx;
    left: 20rpx;
    height: 100%;
    font-size: 28rpx;
    color: #ccc;
    line-height: 70rpx;
}

.search-main-addr label image {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
    margin-top: -4rpx;
}

.search-main-addr .clear {
    width: 190rpx;
    height: 90rpx;
    position: absolute;
    right: 0rpx;
    top: 0rpx;
    z-index: 20;
    background: url('https://xianfengapp.oss-cn-hangzhou.aliyuncs.com/xianfengImages/sprite3/locClear.png') 140rpx 20rpx no-repeat;
    background-size: 28rpx 30rpx;
}