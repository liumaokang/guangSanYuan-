.team-item {
    width: 690rpx;
    height: 130rpx;
    box-sizing: border-box;
    background: #fff;
    box-shadow: 0px 2px 10px 0px rgba(153,153,153,0.2);
    border-radius: 10rpx;
    margin: 0 30rpx 20rpx 30rpx;
    padding: 25rpx 20rpx;
}

.team-item .team-img {
    float: left;
    line-height: 80rpx;
    font-size: 28rpx;
    font-weight: bold;
}

.team-item .team-img image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    overflow: hidden;
    vertical-align: middle;
    margin-right: 20rpx;
}

.team-item .team-info {
    float: right;
    overflow: hidden;
    font-size: 26rpx;
    height: 80rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 44%;
}

.team-item .team-info .btn {
    font-size: 24rpx;
    color: #fff;
    background:linear-gradient(90deg,rgba(255,96,96,1),rgba(246,65,69,1));
box-shadow:0px 2px 10px 0px rgba(234,193,194,0.75);
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    float: right;
    border-radius: 25rpx;
    padding: 0rpx 25rpx;
}

.team-item .team-info .info {
    float: right;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-right: 24rpx;
    font-size: 24rpx;
    color: #999;
    line-height: 33rpx;
    padding-top: 3rpx;
}

.team-item .team-info .info .time {
    font-size: 26rpx;
    color: #333;
    line-height: 37rpx;
}