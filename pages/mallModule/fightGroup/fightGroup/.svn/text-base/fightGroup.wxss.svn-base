page {
    background-color: #f1f1f1;
    padding-bottom: 2rpx;
}

.top-info {
    width: 100%;
    height: 88rpx;
    overflow: hidden;
    color: #000;
    padding: 0 30rpx 0 30rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #fff;
    margin-bottom: 30rpx;
}

.location {
    height: 88rpx;
    line-height: 88rpx;
    float: left;
    font-size: 28rpx;
    display: flex;
    font-weight: bold;
    background: url('https://xianfengapp.oss-cn-hangzhou.aliyuncs.com/xianfengImages/sprite3/selectDown.png') no-repeat right center;
    background-size: 16rpx 16rpx;
    padding-right: 27rpx;
    align-items: center;
}

.location text:first-of-type {
    display: block;
    min-width: 100rpx;
    text-align: left;
    white-space: nowrap;
    font-size: 30rpx;
    line-height: 88rpx;
    color: #1b1b1d;
    margin-left: 10rpx;
    letter-spacing: 3rpx;
    position: relative;
    text-overflow: ellipsis;
}

.location .shop-img {
    width: 130rpx;
    height: 40rpx;
    margin-right: 43rpx;
}

.location text::after {
    content: '';
    position: absolute;
    left: -22rpx;
    top: 34rpx;
    height: 22rpx;
    width: 1rpx;
    background-color: #333;
}

.list-item {
    width: 693rpx;
    margin: 0 auto;
    border-radius: 20rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
    box-shadow: 4rpx 6rpx 20rpx 0rpx rgba(0,0,0,0.1);
    position: relative;
}

.list-item:first-of-type {
    margin-top: 40rpx;
}

.list-item .item-img-box {
    width: 100%;
    height: 250rpx;
    display: flex;
    align-items: center;
    overflow: hidden;
}

.list-item .item-img {
    width: 100%;
    height: 250rpx;
    border-radius: 20rpx 20rpx 0 0;
}

.list-item .item-tips {
    height: 50rpx;
    min-width: 150rpx;
    box-sizing: border-box;
    padding: 5rpx 38rpx 15rpx 30rpx;
    position: absolute;
    left: -6rpx;
    top: 20rpx;
    width: 82px;
    font-size: 28rpx;
    font-weight: bolder;
    color: #fff;
    line-height: 40rpx;
    background: url('https://xianfengapp.oss-cn-hangzhou.aliyuncs.com/xianfengImages/sprite3/groupTag.png') left center no-repeat;
    background-size: 150rpx 60rpx;
}

.item-info {
    padding: 24rpx;
    position: relative;
}

.item-info>text {
    display: block;
}

.item-info .item-name {
    margin-bottom: 14rpx;
    font-size: 28rpx;
    font-weight: bold;
    color: #2C2B2B;
    line-height: 40rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.item-name .old-new {
    padding: 8rpx 16rpx;
    line-height: 48rpx;
    background: rgba(245,253,252,1);
    border-radius: 6rpx;
    border: 1rpx solid rgba(60,219,192,0.3);
    margin-left: 10rpx;
    color: #3CDBC0;
}

.item-info .item-middle {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 28rpx;
}

.item-info .item-desc {
    font-size: 24rpx;
    color: #8C8C8C;
    line-height: 33rpx;
}

.item-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.item-bottom .item-time {
    display: flex;
    flex-direction: column;
}

.item-bottom .item-time .time {
    font-size: 24rpx;
    color: #FFC104;
    line-height: 33rpx;
}

.item-price-box {
    display: flex;
}

.item-nowPrice {
    font-size: 32rpx;
    font-weight: bolder;
    color: #FE2A36;
    line-height: 45rpx;
}

.item-nowPrice:first-letter {
    font-size: 24rpx;
}

.item-price-box .item-oldPrice {
    font-size: 24rpx;
    color: #999;
    line-height: 42rpx;
    align-self: flex-end;
    margin-bottom: 4rpx;
    margin-left: 10rpx;
    text-decoration: line-through;
}

.item-info button {
    width: 210rpx;
    height: 55rpx;
    border-radius: 55rpx;
    color: #fff;
    border: none;
    outline: none;
    font-size: 24rpx;
    line-height: 55rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0;
  background:linear-gradient(90deg,rgba(254,94,103,1),rgba(254,42,54,1));
}

.item-info button image {
    width: 12rpx;
    height: 19rpx;
    margin-left: 18rpx;
}

.item-info button::after {
    border: none;
}

.remain {
    position: absolute;
    top: -8rpx;
    left: 20rpx;
    color: #fff;
    font-size: 30rpx;
    text-align: center;
}

.remain image {
    width: 140rpx;
    height: 132rpx;
}

.remain>view {
    position: absolute;
    top: 0rpx;
    left: 0rpx;
    height: 110rpx;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.remain text {
    text-indent: -8rpx;
}

.line {
    width: 88rpx;
    height: 2rpx;
    background-color: rgba(255,255,255,0.3);
    margin-left: -8rpx;
}

.no-data {
    width: 100%;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 40%;
}

.no-data image {
    width: 242rpx;
    height: 261rpx;
}

.no-data button {
    color: #3cdbc0;
    border: 1rpx solid #3cdbc0;
    margin-top: 50rpx;
    width: 202rpx;
    height: 60rpx;
    line-height: 60rpx;
    background: transparent;
}

.list-item:last-of-type {
    margin-bottom: 128rpx!important;
}