@import "../../index/index/index.wxss";

.swiper {
    border-radius: 0px;
}

.banner-box {
    height: 400rpx;
    padding: 40rpx 0;
    background-color: #fff;
}

.swiper {
    height: 248rpx;
}

.swiper-item {
    box-sizing: border-box;
    padding: 0 20rpx;
    border-radius: 0;
    margin-right: 0;
    overflow: visible;
    position: relative;
}

.swiper-item view {
    position: absolute;
    left: 67rpx;
    top: 60rpx;
    height: 90rpx;
    font-size: 51rpx;
    font-family: PingFangSC-Semibold;
    font-weight: 600;
    color: rgba(102,102,102,1);
    line-height: 90rpx;
}

.swiper-item text.yuan {
    font-size: 32rpx;
    font-family: PingFangSC-Medium;
    font-weight: 500;
    color: rgba(102,102,102,1);
    line-height: 44rpx;
}

.slide-image {
    transform: scaleY(0.9);
    transition: all 0.3s ease;
}

.swiperActive {
    transform: scaleY(1);
}

page {
    background: #f1f1f1;
}

.balance-more {
    background-color: #fff;
    height: 40rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color:rgba(44,43,43,1);
    line-height: 40rpx;
    padding: 24rpx 30rpx;
    text-align: right;
    border-bottom: 1px solid #f5f5f5;
    position: relative;
}
.balance-more image{width: 23rpx;height: 25rpx;}

.recharge-btn {
    width: 750rpx;
    height: 100rpx;
    background:linear-gradient(90deg,rgba(255,96,96,1),rgba(246,65,69,1));
    position: fixed;
    bottom: 0;
    border-radius: 0;
    font-size: 30rpx;
    font-family: PingFangSC-Medium;
    font-weight: bolder;
    color: rgba(255,255,255,1);
    line-height: 100rpx;
}

.recharge-btn::after {
    border: 0;
}

.recharge-tips {
    font-size: 26rpx;
    line-height: 38rpx;
    color:rgba(161,161,161,1);
    padding: 25rpx 40rpx 48rpx 40rpx;
    background: #fff;
    border-top: 5rpx solid #F5F5F5;
}

.recharge-tips>view:first-of-type {
    margin-bottom: 11rpx;
    font-size: 30rpx;
    font-family: PingFangSC-Medium;
    font-weight: bold;
    color: rgba(51,51,51,1);
    line-height: 44rpx;
}

movable-area {
    height: 100%;
    width: 100%;
}

.movable-view {
    width: 120rpx;
    height: 120rpx;
}

movable-view {
    width: 120rpx;
    height: 120rpx;
}

button.authorization {
    width: 100%!important;
    height: 100%!important;
    background: transparent;
    position: absolute;
    top: 0;
    left: 0;
}

button.authorization::after {
    border: none;
}

.balance-box {
    padding-top: 40rpx;
    text-align: center;
    background-color: #fff;
}

.balance-box .balance-tips {
    height: 34rpx;
    font-size: 24rpx;
    font-weight: 400;
    color:rgba(161,161,161,1);
    line-height: 34rpx;
    margin: 0 0 10rpx;
    background-color: #fff;
}

.money-box {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 80rpx;
    padding: 0 60rpx;
    background-color: #fff;
}

.balance-box .money {
    margin: 0 20rpx;
    font-size: 58rpx;
    font-family: PingFangSC-Medium;
    /* font-weight: bolder; */
    color: rgba(51,51,51,1);
}

.money-box .line {
    width: 236rpx;
    height: 3rpx;
    flex: 1;
}

.money-box .line-left {
    background: linear-gradient(to left,#e5e5e5,#fff);
}

.money-box .line-right {
    background: linear-gradient(to right,#e5e5e5,#fff);
}

.choose-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx;
    font-size: 24rpx;
    color: rgba(153,153,153,1);
    line-height: 34rpx;
    height: 94rpx;
    box-sizing: border-box;
    border-radius: 5rpx;
    border: 1px solid rgba(229,229,229,1);
    margin-bottom: 20rpx;
}

.choose-item.active {
    border: 1px solid rgba(176,230,223,1);
    background: rgba(250,254,253,1);
}

.choose-item image {
    width: 40rpx;
    height: 40rpx;
    flex: 0 0 40rpx;
}

 /* 指示点样式 */
.banner-box .wx-swiper-dot{ 
  position: relative;
  top: 0rpx;
  width:12rpx;
  height:12rpx;
  background:rgba(238,238,238,1);
  border-radius:50%;
  }
 /* 当前指示点样式 */
.banner-box .wx-swiper-dot-active{
    position: relative;
    top: 0rpx;
    width: 23rpx;
    height: 12rpx;
    border-radius: 6rpx;
    background:rgba(250,112,116,1);
}
