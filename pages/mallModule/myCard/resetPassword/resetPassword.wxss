page {
    background: #fff;
}

.content {
    margin-top: 28rpx;
}

.content .btn {
    padding: 0 75rpx;
    margin-top: 80rpx;
}

.content button {
    background: linear-gradient(270deg,rgba(60,219,192,1) 0%,rgba(65,240,143,1) 100%);
    height: 100rpx;
    border-radius: 4rpx;
    font-size: 28rpx;
    line-height: 100rpx;
    font-weight: bold;
    color: #fff;
}

.content .title {
    text-align: center;
    height: 50rpx;
    font-size: 36rpx;
    font-weight: bold;
    color: #1b1b1b;
    line-height: 50rpx;
}

.content .des {
    margin-top: 12px;
    margin-bottom: 20rpx;
    font-size: 12px;
    display: flex;
    flex-direction: column;
    justify-items: center;
    align-items: center;
    color: #8b8b8c;
    line-height: 46rpx;
}

.content .section {
    position: relative;
    width: 602rpx;
    margin: 0 auto;
    margin-top: 50rpx;
}

.section .section-title {
    height: 34rpx;
    font-size: 12px;
    color: #d1d1d1;
    line-height: 34rpx;
    padding: 5px 0;
}

.section input {
}

.input_row {
    width: 600rpx;
    margin: 0 auto;
    height: 90rpx;
    position: relative;
    display: flex;
    align-items: center;
    border: 1rpx solid #dedede;
}

.input_row .pwd_item {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 90rpx;
    border-right: 1rpx solid #dedede;
    position: relative;
}

.pwd_item:nth-last-of-type(1) {
    border-right: 0;
}

.pwd_item text {
    width: 30rpx;
    height: 30rpx;
    border-radius: 30rpx;
    background-color: #8b8b8c;
}

.input_control {
    position: absolute;
    left: -3000rpx;
    width: 100rpx;
    height: 100rpx;
}

.section .input_control {
}

button[disabled] {
    background: rgba(216,216,216,1);
    color: #fff;
}

button::after {
    border: none;
}