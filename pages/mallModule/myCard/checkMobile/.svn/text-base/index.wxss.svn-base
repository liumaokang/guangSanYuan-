page {
    background-size: 100% 100%;
}

.logo {
    text-align: center;
    padding: 40rpx 0 22rpx 0;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.logo image {
    width: 46rpx;
    height: 60rpx;
}

.logo text:nth-of-type(1) {
    font-size: 36rpx;
    font-weight: bolder;
    color: rgba(0,0,0,0.8);
    line-height: 50rpx;
    margin: 20rpx 0 10rpx;
}

.logo text:last-child {
    font-size: 26rpx;
    color: rgba(0,0,0,0.3);
    line-height: 36rpx;
}

.btn {
    color: #fff;
    text-align: center;
    width: 570rpx;
    height: 100rpx;
    background: linear-gradient(270deg,rgba(60,219,192,1) 0%,rgba(65,240,143,1) 100%);
    border-radius: 4rpx;
    font-size: 36rpx;
    font-weight: bold;
    line-height: 100rpx;
    margin-top: 60rpx;
}

button.btn[disabled] {
    background: #D8D8D8;
}

.get-code {
    font-size: 28rpx;
    font-weight: bold;
    line-height: 110rpx;
    float: right;
}

.mobile-input-box,.code-input-box {
    margin: 0rpx 90rpx;
    height: 110rpx;
    border-bottom: 1rpx solid rgba(0,0,0,0.1);
    overflow: hidden;
    line-height: 110rpx;
}

view input {
    float: left;
    width: 380rpx;
    font-size: 30rpx;
    font-weight: bold;
    color: #000;
    height: 110rpx;
    line-height: 110px;
}